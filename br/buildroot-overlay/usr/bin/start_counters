#!/bin/bash
output_dir=~/hpm_data
mkdir -p $output_dir
num_harts=`grep -o 'hart' /proc/cpuinfo | wc -l`
hpm_pids=()
for ((i=0;i<$num_harts;i++))
do
    mask_decimal=$[ 1 << $i ]
    hpm_counters > $output_dir/hpm_counters$i.out &
    hpm_pids+=($!)
    taskset -p `printf %x $mask_decimal` $!
done
sleep 1

for pid in "${hpm_pids[@]}"; do
    kill -s USR1 $pid
done
